<div style="font: normal 14px auto "Trebuchet MS", Verdana, Arial, Helvetica, sans-serif;">Agent Report: <%= "#{@bmonth}/#{@bday} #{@byear} - #{@emonth}/#{@eday} #{@eyear} for #{@agent.channel.to_s} : #{@agent.first} #{@agent.last}" %></div>
<br />
<table align="center" width="100%">
  <tr>
    <th>Channel</th>
    <th>First</th>
    <th>Last</th>
    <th>Total Calls</th>
    <th>Talk Time</th>
    <th>Pause Time</th>
    <th>Avg. Reso. Time</th>
  </tr>
  <tr>
  <td><%=h @agent.channel %></td>
  <td><%=h @agent.first %></td>
  <td><%=h @agent.last %></td>
  <td><%=h @agent.count_calls(@bmonth, @bday, @byear, @emonth, @eday, @eyear) %></td>
  <td><%=h @agent.talk_time(@bmonth, @bday, @byear, @emonth, @eday, @eyear) %></td>
  <td><%=h @agent.pause_time(@bmonth, @bday, @byear, @emonth, @eday, @eyear) %></td>
  <td><%=h @agent.average_reso_time(@bmonth, @bday, @byear, @emonth, @eday, @eyear) %></td>
  </tr>
</table>

<% form_tag :action => 'export_agent_report', :bmonth => @bmonth, :bday => @bday, :byear => @byear, :emonth => @emonth, :eday => @eday, :eyear => @eyear, :agent_id => @agent.id  do %>
  <%= submit_tag "Export CSV" %>
<% end %>

