<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Queue-Tip: Asterisk Queue Monitoring</title>
    <%= stylesheet_link_tag 'queue_tip/monitor' %>
    <%= javascript_include_tag :defaults %>
    <script language ="javascript">
      function ToggleHeader()
      {
        if( $("headster").style.display == 'block') 
          {
            $("headster").style.display = 'none';
          } 
          else
          {
            $("headster").style.display ='block';
          }
        if( $("headster2").style.display == 'block') 
          {
            $("headster2").style.display = 'none';
          } 
          else
          {
            $("headster2").style.display ='block';
          }
        if( $("footster").style.display == 'block') 
          {
            $("footster").style.display = 'none';
          } 
          else
          {
            $("footster").style.display ='block';
          }
      }
    </script>
  </head>
  <body>
    <div id='container'>
      <div id="headster" style="display: block;">
        <div id='header'>
          <div id='logo'>
            <%= yield :header %>
          </div>
          <div id='menu'>
            <%= yield :menu %>
          </div>
        </div>
      </div>
      <div id='main'>
        <div id='content'>
          <div id="headster2" style="display: block;">
          <div id='head_image'>
            <div id='slogan'>
              <strong>
                Queue-Tip
              </strong>
              <br />
              Asterisk Queue Monitoring
            </div>
          </div>
          </div>
          <div id='text'>
            <%= yield :text %>
            <a href="#" name="header_toggle" onClick="ToggleHeader();">+/- Borders</a>
          </div>
        </div>
        <div id="footster" style="display: block;">
        <div id='footer'>
          <div id='left_footer'>
            <%= render(:partial => 'left_footer.html.erb') %>
          </div>
          <div id='right_footer'>
            <%= render(:partial => 'right_footer.html.erb') %>
          </div>
        </div>
       </div>
      </div>
    </div>
  </body>
</html>
